generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Category {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  questions Question[]
}

model Question {
  id         Int      @id @default(autoincrement())
  imageUrl   String
  answers    String
  createdAt  DateTime @default(now())
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}